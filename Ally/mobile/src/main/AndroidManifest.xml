<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.cs160.team8.ally">

    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:name="com.orm.SugarApp"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <meta-data android:name="DATABASE" android:value="ally.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="com.cs160.team8.ally" />
        <!--API key password: "keypass" , name: "myKey"-->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyAPSX8gqYQ8GbxwmT5yaSKKs-v9VmAzJEE" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:parentActivityName=".SelectPatientActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".PhoneToWatchService">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.BIND_LISTENER" />
            </intent-filter>
        </service>

        <!-- Listeners are special services that need to be declared like below, as BIND_LISTENER -->
        <activity
            android:name=".CreateReminderActivity"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".SelectPatientActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SelectProfilePhotoActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:parentActivityName=".MainActivity" />
        <activity
            android:name=".PatientLocationActivity"
            android:parentActivityName=".MainActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".EditRadiusActivity"
            android:parentActivityName=".PatientLocationActivity"
            />
    </application>

</manifest>