    <ImageView
        android:id="@+id/patient_profile_photo"
        android:layout_width="355px"
        android:layout_height="355px"
        android:paddingTop="30px"
        android:paddingBottom="30px"
        android:adjustViewBounds="true"
        android:background="@drawable/background_circle"
        android:scaleType="centerCrop"
        android:src="@drawable/sean"
        android:layout_marginTop="20dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/relativeLayout" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/patient_profile_photo"
        android:layout_alignTop="@id/patient_profile_photo">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/patientname"
            android:text="Sean Nguyen"
            android:textSize="28dp"
            android:textColor="@color/primaryText"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:gravity="center"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/message_patient_button"
            android:textSize="12dp"
            android:text="Message Patient"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@id/patientname"
            android:layout_below="@+id/patientname"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="10dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#fbebeb"
        android:layout_below="@+id/patient_profile_photo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="@drawable/rounded_button"
        android:padding="10dp"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pillreminder"
            android:text="Sean was supposed to take Lipitor 30 minutes ago!"
            android:textColor="@color/primaryText"
            android:textSize="14dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pillreminder"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="10dp"
            android:paddingRight="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/remind"
                android:textSize="14dp"
                android:text="REMIND"
                android:layout_marginRight="32dp"
                android:textColor="#219653"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/dismiss"
                android:textSize="14dp"
                android:text="DISMISS"
                android:layout_toRightOf="@+id/remind"
                android:textColor="#EB5757"
                />
        </RelativeLayout>

    </RelativeLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/relativeLayout">

        <LinearLayout
            android:id="@+id/mapfragmentcontainer"
            android:layout_width="500dp"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_alignParentStart="true">
        </LinearLayout>

        <TextView
            android:id="@+id/is_in_range"
            android:layout_height="35dp"
            android:layout_width="280dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="15dp"
            android:textColor="@color/primaryText"
            android:textSize="14dp"
            android:gravity="center_vertical"
            android:text="Sean Nguyen is in the safe zone."
            android:background="@drawable/textbox_border"
            />


    </FrameLayout>

