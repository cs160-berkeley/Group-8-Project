<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:id="@+id/press"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <View android:layout_width="200dp"
        android:id="@+id/circone"
        android:layout_height="200dp"
        android:background="@drawable/circle_one"
        android:visibility="gone"/>
    <View android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/circtwo"
        android:background="@drawable/circle_two"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hold for help"
        android:textColor="@color/white"
        android:id="@+id/title"
        android:textSize="36sp"
        android:layout_marginStart="34dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>